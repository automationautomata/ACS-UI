<CardsListWindow>:
    size_hint: (None, None)
    size: (Window.width, 450)
    width: 1500 if Window.width > 1500 else Window.width
    height: 450
    title: 'Cards list'
    auto_dismiss: False

    RelativeLayout:
        id: table

        ShowDeletedRecordsCheckBox:
            id: cards_list_deleted_records
            _table: 'cards'
            _root: root

        TableHeader:
            id: cards_list_header
            pos: (215, root.ids.cards_list_table.top + 1)
            size_hint: (None, None)
            size: (root.width - 250, 50)

            _grid: cards_list_header_content
            _rows: 1
            _columns: 5

            _data_titles: ('id', 'Number', 'Date the card was added', 'Date the card was deleted', 'Is sabotaged card')
            _data_keys: ('id', 'number', 'date_time_begin', 'date_time_end', 'isSabotaged')
            _table: 'cards'
            _root: root

            GridLayout:
                id: cards_list_header_content
                rows: cards_list_header._rows
                cols: cards_list_header._columns
                col_default_width: '200dp'
                col_force_default: True
                size_hint_x: None
                width: self.minimum_width

        TableContent:
            id: cards_list_table
            pos: (215, 0)
            size_hint: (None, None)
            size: (root.width - 250, 310)

            _grid: cards_list_table_content
            _header: root.ids.cards_list_header
            _rows: 25
            _columns: 5

            GridLayout:
                id: cards_list_table_content
                rows: cards_list_table._rows
                cols: cards_list_table._columns
                row_default_height: '20dp'
                row_force_default: True
                size_hint_y: None
                height: self.minimum_height

                col_default_width: '200dp'
                col_force_default: True
                size_hint_x: None
                width: self.minimum_width

        AddRecordButton:
            id: add_record_button
            pos: (0, 330)
            size: (210, 30)
            on_press_event: Factory.AddRecordWindow().open_win('cards')

        EditRecordButton:
            id: edit_record_button
            pos: (0, 295)
            size: (210, 30)
            on_press_event: Factory.EditRecordWindow().open_win('cards')

        DeleteRecordButton:
            id: delete_record_button
            pos: (0, 260)
            size: (210, 30)
            on_press_event: Factory.DeleteRecordWindow().open_win('cards')

        FindButton:
            id: find_button
            pos: (0, 225)
            size: (210, 30)
            on_press_event: Factory.FindWindow().open_win('cards')

